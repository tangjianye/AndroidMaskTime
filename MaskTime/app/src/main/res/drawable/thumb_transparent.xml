<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 普通无焦点状态 -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="ring">
            <solid android:color="@color/green" />
            <stroke android:width="0.5dip" android:color="@color/green" />
            <gradient android:endColor="@color/green" android:startColor="@color/green" />
        </shape>
    </item>

    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="ring">
            <solid android:color="@color/black" />
            <stroke android:width="0.5dip" android:color="@color/black" />
            <gradient android:endColor="@color/black" android:startColor="@color/black" />
        </shape>
    </item>

</selector>