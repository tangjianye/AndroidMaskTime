<resources>

    <!-- Application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Dialog -->
    <style name="BaseDailog" parent="@android:style/Theme.Light.NoTitleBar" />

    <!-- 字体样式 Start -->
    <style name="BaseText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Micro" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_micro</item>
    </style>

    <style name="BaseText.Small" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="BaseText.Medium.Small" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="BaseText.Medium" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="BaseText.Large" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="BaseText.xLarge" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_xlarge</item>
    </style>
    <!-- 字体样式 End -->

    <style name="DefualtTextStyle" parent="BaseText.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DefaultBgStyle">
        <item name="android:background">@drawable/bg_default</item>
    </style>

    <!--    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>-->

    <style name="FullScreenDialog" parent="BaseDailog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="DefaultListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/android_margin_micro</item>
        <item name="android:layout_marginRight">@dimen/android_margin_micro</item>
        <item name="android:layout_marginBottom">@dimen/android_margin_micro</item>
        <item name="android:layout_marginTop">@dimen/android_margin_micro</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/android_divider_height_normal</item>
    </style>

</resources>