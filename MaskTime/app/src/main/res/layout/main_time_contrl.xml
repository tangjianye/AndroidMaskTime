<?xml version="1.0" encoding="utf-8"?>
<com.peach.masktime.ui.layer.TimeContrlLayer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/android_padding_middle">

    <com.peach.masktime.ui.view.CircleProgressBar
        android:id="@+id/round_progressbar"
        android:layout_width="@dimen/android_width_xlarge"
        android:layout_height="@dimen/android_height_xlarge"
        android:layout_centerInParent="true"
        android_custom:roundColor="@color/white"
        android_custom:roundProgressColor="@color/pink"
        android_custom:roundWidth="@dimen/android_width_normal"
        android_custom:style="STROKE"
        android_custom:textIsDisplayable="false" />

    <Button
        android:id="@+id/btn_time_contrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_time_play" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/android_margin_middle"
        android:text="@string/app_name" />

</com.peach.masktime.ui.layer.TimeContrlLayer>
