<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/android_title_height"
    android:background="@color/orange"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ic_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/android_margin_normal"
        android:background="@drawable/selector_ic_back" />

    <TextView
        android:id="@+id/title_header"
        style="@style/TextStyle.Title"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/more_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/android_margin_normal"
        android:background="@drawable/selector_ic_more" />
</RelativeLayout>