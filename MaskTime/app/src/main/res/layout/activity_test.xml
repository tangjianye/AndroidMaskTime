<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.peach.masktime.ui.view.CircleSeekBar
        android:id="@+id/circle_seekbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:thumb="@drawable/thumb"
        android_custom:progress_background="@android:color/darker_gray"
        android_custom:progress_front="@android:color/holo_blue_light"
        android_custom:progress_max="1000"
        android_custom:progress_text_color="@android:color/holo_green_light"
        android_custom:progress_text_size="30dp"
        android_custom:progress_text_stroke_width="4dp"
        android_custom:progress_width="2dp"
        android_custom:show_progress_text="true" />

</LinearLayout>
